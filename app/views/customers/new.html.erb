<h1>Create customer</h1>
<%= render 'shared/errors', resource: @customer %>

<form action="/customers/", method="post">
  <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>" >

  <p>
    <label for="customer-name">Name:</label>
    <input type="text" name="customer[name]" id="customer-name"
  </p><br>

  <p>
    <label for="customer-phone_number">Phone number:</label>
    <input type="text" name="customer[phone_number]" id="customer-phone_number"
  </p><br>

  <p>
    <label for="customer-description">Description:</label>
    <input type="text" name="customer[description]" id="customer-description"
  </p><br>

  <input type="submit" value="Create customer"
  <br>
</form>

<%= link_to 'Back', customers_path %>
